<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.song.daydayup">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.douban.activity.MovieDetailActivity"/>
        <activity android:name=".ui.douban.activity.ActorActivity"/>
        <activity android:name=".ui.zhihu.activity.ZhihuDailyActivity" android:exported="true"/>
        <activity android:name=".ui.zhihu.activity.ZhihuThemeActivity"/>
        <activity android:name=".ui.zhihu.activity.ZhihuSectionActivity"/>
    </application>

</manifest>